// Prisma Schema for Personal AI Application

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 用户表
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  avatar    String?
  // 用户画像 - JSON 格式存储 AI 分析的用户特征
  profile   String?  // JSON: { profession, interests, expertise, personality, goals, context }
  profileUpdatedAt DateTime? @map("profile_updated_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 关联
  conversations Conversation[]
  aiAssistants  AIAssistant[]
  prompts       Prompt[]

  @@map("users")
}

// AI 助手配置表
model AIAssistant {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  name        String
  description String?
  avatar      String?
  systemPrompt String  @map("system_prompt")
  model       String   @default("gpt-4o")
  temperature Float    @default(0.9)
  maxTokens   Int      @default(4096) @map("max_tokens")
  skills      String?  // 技能配置 JSON 字符串
  isDefault   Boolean  @default(false) @map("is_default")
  // 相关问题推荐配置
  relatedQuestionsEnabled Boolean @default(true) @map("related_questions_enabled")
  relatedQuestionsMode    String  @default("llm") @map("related_questions_mode") // llm | template | disabled
  relatedQuestionsCount   Int     @default(3) @map("related_questions_count") // 生成问题数量 1-5
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // 关联
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations Conversation[]

  @@map("ai_assistants")
}

// 对话表
model Conversation {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  assistantId  String?  @map("assistant_id")
  title        String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // 关联
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  assistant AIAssistant? @relation(fields: [assistantId], references: [id], onDelete: SetNull)
  messages  Message[]

  @@map("conversations")
}

// 消息表
model Message {
  id               String   @id @default(cuid())
  conversationId   String   @map("conversation_id")
  role             String   // user, assistant, system
  content          String
  messageType      String   @default("text") @map("message_type") // text, image, video
  imageUrl         String?  @map("image_url") // 图像URL
  imageProvider    String?  @map("image_provider") // replicate, huggingface
  imageModel       String?  @map("image_model") // 使用的图像模型
  metadata         String?  // 额外元数据 JSON 字符串（如图像尺寸、生成参数等）
  tokenCount       Int?     @map("token_count")
  relatedQuestions String?  @map("related_questions") // 相关问题 JSON 字符串数组（仅 assistant 消息）
  createdAt        DateTime @default(now()) @map("created_at")

  // 关联
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("messages")
}

// Prompt 模板库
model Prompt {
  id          String   @id @default(cuid())
  userId      String?  @map("user_id")
  title       String
  content     String
  category    String?
  tags        String?  // 标签 JSON 字符串，如 '["tag1","tag2"]'
  isPublic    Boolean  @default(false) @map("is_public")
  usageCount  Int      @default(0) @map("usage_count")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // 关联
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("prompts")
}

// 技能定义表
model Skill {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  icon        String?
  category    String?
  config      String?  // 技能配置模板 JSON 字符串
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("skills")
}
